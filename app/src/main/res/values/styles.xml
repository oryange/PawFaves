<resources>

    <style name="SpinnerTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="fontDefault" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>


    <style name="button" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/pink</item>
    </style>


    <style name="text_age" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">36sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/pinkDark</item>
        <item name="android:background">@drawable/background_paw</item>
    </style>

    <style name="customTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/pink</item>
        <item name="hintTextColor">@color/pinkDark</item>
    </style>
</resources>